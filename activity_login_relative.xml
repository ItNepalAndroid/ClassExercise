<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/rel_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/login_icon"
        />
    <TextView
        android:id="@+id/rel_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LessBook"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rel_icon"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:paddingHorizontal="20dp"
        />

    <TextView
        android:id="@+id/rel_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your credentials."
        android:textColor="@color/colorAccent"
        android:layout_below="@id/rel_tv_title"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/rel_tv_un_lbl"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:layout_below="@+id/rel_tv_subtitle"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/rel_et_un"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Your username here."
        android:layout_toRightOf="@id/rel_tv_un_lbl"
        android:layout_alignBaseline="@id/rel_tv_un_lbl"
        android:inputType="text"
        android:background="@color/colorAccent"
        android:textColorHint="@color/lightRed"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:paddingVertical="5dp"
        android:paddingLeft="5dp"
        />

    <TextView
        android:id="@+id/rel_tv_pw_lbl"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:layout_below="@id/rel_tv_un_lbl"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/rel_et_pw"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rel_tv_pw_lbl"
        android:layout_alignBaseline="@id/rel_tv_pw_lbl"
        android:hint="Use a strone one."
        android:inputType="textPassword"
        android:background="@color/colorAccent"
        android:textColorHint="@color/lightRed"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:paddingVertical="5dp"
        android:paddingLeft="5dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rel_et_pw"
        android:layout_alignRight="@id/rel_et_pw"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/colorAccent"/>
</RelativeLayout>